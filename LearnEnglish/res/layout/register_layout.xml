             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             />
        
        <TextView 
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="确认密码"
        	android:textSize="15sp"
        	/>
         <EditText
             android:id="@+id/et_confirm" 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             />
         
         <TextView 
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="电子邮箱"
        	android:textSize="15sp"
        	/>
         <EditText
             android:id="@+id/et_email" 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             />
         
         <TextView 
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="联系方式"
        	android:textSize="15sp"
        	/>
         <EditText
             android:id="@+id/et_phone" 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             />
         
